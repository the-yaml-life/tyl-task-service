# TYL Microservice Environment Configuration
# Copy this file to .env and adjust values for your environment

# Service Configuration
TYL_SERVICE_NAME=tyl-{microservice-name}
TYL_VERSION=1.0.0

# Server Configuration
HOST=0.0.0.0
PORT=3000
REQUEST_TIMEOUT_MS=30000
MAX_REQUEST_SIZE=1048576

# Database Configuration (optional)
# DATABASE_URL=postgres://username:password@localhost:5432/database_name
# DB_MAX_CONNECTIONS=10
# DB_CONNECTION_TIMEOUT_MS=5000
# DB_QUERY_TIMEOUT_MS=10000

# External Services Configuration
EXTERNAL_TIMEOUT_MS=10000
EXTERNAL_RETRY_ATTEMPTS=3
EXTERNAL_RETRY_DELAY_MS=1000

# Logging and Monitoring
RUST_LOG=info
LOG_FORMAT=json
METRICS_ENABLED=true
TRACING_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Example External Service URLs
# EXAMPLE_SERVICE_URL=https://api.example.com
# AUTH_SERVICE_URL=https://auth.example.com