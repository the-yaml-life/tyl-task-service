# TYL Task Service Environment Configuration
# Copy this file to .env and modify the values as needed

# ===========================================
# Service Configuration
# ===========================================
PORT=3000
ENVIRONMENT=development
RUST_LOG=info,tyl_task_service=debug

# ===========================================
# FalkorDB Configuration (Graph Database)
# ===========================================
FALKORDB_HOST=localhost
FALKORDB_PORT=6379
FALKORDB_PASSWORD=taskservice123
FALKORDB_DATABASE=0
FALKORDB_GRAPH_NAME=task_management

# ===========================================
# Redis PubSub Configuration (Event System)  
# ===========================================
REDIS_PUBSUB_HOST=localhost
REDIS_PUBSUB_PORT=6380
REDIS_PUBSUB_PASSWORD=pubsub123

# ===========================================
# Health Check Configuration
# ===========================================
HEALTH_CHECK_INTERVAL=30s

# ===========================================
# Development Configuration
# ===========================================
# Enable development features
DEV_MODE=true

# Log file configuration
LOG_LEVEL=debug
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/tyl-task-service.log

# ===========================================
# Testing Configuration
# ===========================================
# Use separate database for tests
TEST_FALKORDB_DATABASE=1
TEST_FALKORDB_GRAPH_NAME=test_task_management
TEST_MODE=false

# ===========================================
# Docker Configuration
# ===========================================
# When running with docker-compose, these will be overridden
# FALKORDB_HOST=falkordb
# REDIS_PUBSUB_HOST=redis-pubsub